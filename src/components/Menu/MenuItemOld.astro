---
const { title, description, price, image, isTopRated = false, fullWidth = false } = Astro.props;

// Format price to have 2 decimal places
const formattedPrice = price.toFixed(2);
---

{fullWidth ? (
  <div class="col-span-2">
    <div class="bg-white rounded-xl overflow-hidden shadow-md">
      <div class="flex flex-col md:flex-row md:items-center justify-between p-4">
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h3 class="text-lg font-medium text-gray-900">{title}</h3>
            {isTopRated && (
              <span class="inline-flex items-center bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                Top rated
              </span>
            )}
          </div>
          <p class="text-gray-600 mt-1 line-clamp-2">{description}</p>
          <p class="text-gray-900 font-semibold mt-2">EGP {formattedPrice}</p>
        </div>
        <div class="w-full md:w-24 h-24 rounded-lg overflow-hidden flex-shrink-0 bg-gray-200">
          <img src={image || "/placeholder.svg"} alt={title} class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </div>
) : (
  <div class="bg-white rounded-xl overflow-hidden shadow-md">
    <div class="relative h-36 bg-gray-200">
      <img src={image || "/placeholder.svg"} alt={title} class="w-full h-full object-cover" />
      {isTopRated && (
        <div class="absolute bottom-2 left-2 bg-white px-2 py-1 rounded-md text-sm text-orange-500 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="mr-1">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
          </svg>
          Top rated
        </div>
      )}
    </div>
    <div class="p-3">
      <h3 class="font-medium text-sm">{title}</h3>
      <p class="text-sm mt-1">EGP {formattedPrice}</p>
    </div>
  </div>
)} 