---
const { title, description, price, image, isTopRated = false } = Astro.props;

// Format price to have 2 decimal places
const formattedPrice = price.toFixed(2);
---

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 p-4 rounded-lg hover:bg-gray-100 transition-colors duration-200">
  <div class="w-full md:w-28 h-28 rounded-lg overflow-hidden flex-shrink-0 md:order-1">
    <img src={image || "/placeholder.svg"} alt={title} class="w-full h-full object-cover" />
  </div>
  <div class="flex-1 md:order-2">
    <div class="flex items-center gap-2">
      <h3 class="text-lg font-medium text-gray-900">{title}</h3>
      {isTopRated && (
        <span class="inline-flex items-center bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Top rated
        </span>
      )}
    </div>
    <p class="text-gray-600 mt-1 line-clamp-2">{description}</p>
  </div>
    <p class="text-gray-900 font-semibold mt-2 md:order-3">EGP {formattedPrice}</p>
</div>
