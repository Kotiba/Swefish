---
import MainLayout from "@/layouts/MainLayout.astro";
import BrandLogo from "@components/BrandLogo.astro";
import VaulDrawerWrapper from "@components/ui/drawers/VaulDrawerWrapper";
import PrimaryCTA from "@/components/ui/buttons/PrimaryCTA.astro";
---

<MainLayout>
  <div class="flex flex-col items-center justify-center h-screen">
    <div class="mb-8">
      <BrandLogo class="h-24 w-auto" />
    </div>
    <h1 class="text-balance text-4xl md:text-5xl font-bold text-center text-gray-800 dark:text-gray-100">
      This Site is Under Construction
    </h1>

    <!-- <VaulDrawerWrapper client:only="react" /> -->

    <button
      type="button"
      class="relative flex h-10 mt-14 flex-shrink-0 items-center justify-center gap-2 overflow-hidden rounded-full bg-gray-800 px-4 text-sm font-medium shadow-sm transition-all hover:bg-gray-700 text-white dark:bg-white dark:hover:bg-gray-100 dark:text-gray-900"
      aria-haspopup="dialog"
      aria-expanded="false"
      aria-controls="hs-offcanvas-bottom"
      data-hs-overlay="#hs-offcanvas-bottom"
    >
      Open Preline Drawer
    </button>

    <div id="hs-offcanvas-bottom" class="hs-overlay hs-overlay-open:translate-y-0 translate-y-full fixed bottom-0 inset-x-0 transition-all duration-300 transform max-h-96 size-full z-80 hs-overlay-backdrop-open:bg-black/20 hs-overlay-backdrop-open:transition-opacity hs-overlay-backdrop-open:duration-300 hs-overlay-backdrop-open:ease-in-out bg-white border-t border-gray-200 dark:bg-neutral-800 dark:border-neutral-700 hidden rounded-t-2xl" role="dialog" tabindex="-1" aria-labelledby="hs-offcanvas-bottom-label">
        <div class="flex justify-between items-center py-3 px-4 border-b border-gray-200 dark:border-neutral-700">
          <h3 id="hs-offcanvas-bottom-label" class="font-bold text-gray-800 dark:text-white">
            Offcanvas title
          </h3>
          <button type="button" class="size-8 inline-flex justify-center items-center gap-x-2 rounded-full border border-transparent bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-hidden focus:bg-gray-200 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-700 dark:hover:bg-neutral-600 dark:text-neutral-400 dark:focus:bg-neutral-600" aria-label="Close" data-hs-overlay="#hs-offcanvas-bottom">
            <span class="sr-only">Close</span>
            <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>
        <div class="p-4">
          <p class="text-gray-800 dark:text-neutral-400">
            Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
          </p>
        </div>
      </div>
    

  </div>
</MainLayout>
