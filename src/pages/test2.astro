---

<MainLayout title="SWEFISH - Seafood Restaurant Menu">
  <Navbar categories={menuCategories} />
  
  <main class="pt-20 container mx-auto px-4 md:px-8 max-w-6xl">
    {menuCategories.map((category) => (
      <MenuSection id={category.id} title={category.title}>
        {category.items.map((item) => (
          <MenuItem
            title={item.title}
            description={item.description}
            price={item.price}
            image={item.image}
            isTopRated={item.isTopRated}
          />
        ))}
      </MenuSection>
    ))}
    
    
  </main>
</MainLayout>

