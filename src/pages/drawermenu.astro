---
import MainLayout from "@/layouts/MainLayout.astro";
import menuData from "@/data/menu.json";
import Drawer from "../pages/astrodrawer.astro";

const { menuCategories } = menuData;
---

<MainLayout title="Drawer Menu - SWEFISH">
  <header class="fixed top-0 left-0 right-0 bg-white shadow-md z-40 py-4 px-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-blue-900">SWEFISH</h1>
      
      <Drawer id="nav-drawer" direction="right">
        <button 
          slot="trigger" 
          class="p-2 bg-blue-500 text-white rounded-full"
          aria-label="Open menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
        
        <div class="w-[280px] h-full p-6">
          <div class="flex justify-between items-center mb-8">
            <h2 class="text-xl font-bold">Menu Categories</h2>
            <button 
              onclick="navDrawerDrawer.close()" 
              class="p-1 hover:bg-gray-100 rounded-full"
              aria-label="Close"
            >
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          
          <nav>
            <ul class="space-y-3">
              {menuCategories.map((category) => (
                <li>
                  <a 
                    href={`#${category.id}`} 
                    class="block py-2 px-4 hover:bg-blue-50 rounded transition"
                    onclick={`navDrawerDrawer.close(); document.getElementById('${category.id}').scrollIntoView({behavior: 'smooth'})`}
                  >
                    {category.title}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </Drawer>
    </div>
  </header>

  <main class="pt-24 pb-28 container mx-auto px-4 md:px-8 max-w-6xl">
    {menuCategories.map((category) => (
      <section id={category.id} class="mb-12 scroll-mt-24">
        <h2 class="text-2xl font-bold mb-6 text-blue-900">{category.title}</h2>
        
        <div class="grid gap-6 sm:grid-cols-2">
          {category.items.map((item) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
              {item.image && (
                <img 
                  src={item.image} 
                  alt={item.title} 
                  class="w-full h-48 object-cover"
                />
              )}
              
              <div class="p-4">
                <div class="flex justify-between items-start mb-2">
                  <h3 class="text-lg font-semibold">{item.title}</h3>
                  <span class="font-bold text-blue-600">${item.price}</span>
                </div>
                <p class="text-gray-600 text-sm mb-4">{item.description}</p>
                
                <Drawer id={`item-${item.title.replace(/\s+/g, '-').toLowerCase()}`} snapPoints={[40, 70]}>
                  <button 
                    slot="trigger" 
                    class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm w-full"
                  >
                    View Details
                  </button>
                  
                  <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                      <h3 class="text-xl font-bold">{item.title}</h3>
                      <button 
                        onclick={`item${item.title.replace(/\s+/g, '-').toLowerCase()}Drawer.close()`} 
                        class="p-1 hover:bg-gray-100 rounded-full"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                    
                    {item.image && (
                      <img 
                        src={item.image} 
                        alt={item.title} 
                        class="w-full h-48 object-cover rounded-lg mb-4"
                      />
                    )}
                    
                    <p class="mb-4">{item.description}</p>
                    
                    {item.weightOptions ? (
                      <div class="mb-4">
                        <h4 class="font-semibold mb-2">Weight Options:</h4>
                        <div class="space-y-2">
                          {item.weightOptions.map((option) => (
                            <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                              <span>{option.weight}</span>
                              <span class="font-medium">${option.price}</span>
                            </div>
                          ))}
                        </div>
                      </div>
                    ) : null}
                    
                    <div class="mt-6">
                      <button 
                        class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
                      >
                        Add to Order
                      </button>
                    </div>
                  </div>
                </Drawer>
              </div>
            </div>
          ))}
        </div>
      </section>
    ))}
  </main>

  <footer class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4 z-40">
    <Drawer id="cart-drawer" snapPoints={[30, 80]}>
      <button 
        slot="trigger" 
        class="flex items-center justify-center w-full gap-2 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
        </svg>
        View Cart (0)
      </button>
      
      <div class="p-6">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-bold">Your Order</h2>
          <button 
            onclick="cartDrawerDrawer.close()" 
            class="p-1 hover:bg-gray-100 rounded-full"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <div class="mb-6 text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto mb-4 text-gray-300">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
          </svg>
          <p class="text-gray-500">Your cart is empty</p>
        </div>
        
        <button 
          class="w-full py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 disabled:opacity-50 disabled:cursor-not-allowed"
          disabled
        >
          Checkout
        </button>
      </div>
    </Drawer>
  </footer>
</MainLayout> 