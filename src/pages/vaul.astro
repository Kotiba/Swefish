---
import MainLayout from "../layouts/MainLayout.astro";
import VaulDrawer from "../components/VaulDrawer";
---

<MainLayout title="Vaul Drawer - Demo">
  <div class="container mx-auto px-4 py-16 min-h-screen flex flex-col items-center justify-center">
    <h1 class="text-3xl text-yellow-600 font-bold mb-8 text-center">Vaul Drawer Demo</h1>
    
    <p class="text-lg mb-8 text-center max-w-md">
      A drawer component implementation demo.
    </p>

    <VaulDrawer client:load />

    <div class="mt-8">
      <div class="p-4 bg-blue-50 rounded-lg border border-blue-100">
        <h2 class="text-lg font-semibold mb-2">Features:</h2>
        <ul class="list-disc pl-5 space-y-1">
          <li>Smooth animations</li>
          <li>Drag to close</li>
          <li>Multiple direction support</li>
          <li>Escape key to dismiss</li>
          <li>Overlay click to dismiss</li>
        </ul>
      </div>
    </div>
  </div>
</MainLayout> 