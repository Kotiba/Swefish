---
import MainLayout from "@/layouts/MainLayout.astro";
import Navbar from "@/components/Menu/Navbar.astro";
import menuData from "@/data/menu.json";
import Drawer from "../pages/astrodrawer.astro";

const { menuCategories } = menuData;
---

<MainLayout title="Drawer Demo - SWEFISH">
  <Navbar categories={menuCategories} />

  <main class="pt-32 pb-20 container mx-auto px-4 md:px-8 max-w-6xl">
    <h1 class="text-3xl font-bold mb-8">Drawer Component Demo</h1>
    
    <div class="grid gap-8 mb-16">
      <div class="bg-gray-100 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Basic Bottom Drawer</h2>
        <Drawer id="basic-drawer">
          <button 
            slot="trigger" 
            class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
          >
            Open Basic Drawer
          </button>
          
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">Basic Drawer Content</h3>
            <p class="mb-4">This is a simple drawer that opens from the bottom.</p>
            <button 
              onclick="basicDrawerDrawer.close()" 
              class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300"
            >
              Close
            </button>
          </div>
        </Drawer>
      </div>
      
      <div class="bg-gray-100 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Menu Drawer with Snap Points</h2>
        <Drawer id="menu-drawer" snapPoints={[25, 50, 90]}>
          <button 
            slot="trigger" 
            class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
          >
            Open Menu Drawer
          </button>
          
          <div class="p-4">
            <h3 class="text-xl font-bold mb-4">Menu Categories</h3>
            <ul class="space-y-4">
              {menuCategories.map((category) => (
                <li>
                  <h4 class="text-lg font-semibold">{category.title}</h4>
                  <ul class="pl-4 mt-2 space-y-2">
                    {category.items.map((item) => (
                      <li class="flex justify-between">
                        <span>{item.title}</span>
                        <span class="font-medium">${item.price}</span>
                      </li>
                    ))}
                  </ul>
                </li>
              ))}
            </ul>
            <div class="mt-6 text-center">
              <button 
                onclick="menuDrawerDrawer.close()" 
                class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300"
              >
                Close Menu
              </button>
            </div>
          </div>
        </Drawer>
      </div>
      
      <div class="bg-gray-100 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Side Drawer (Right)</h2>
        <Drawer id="side-drawer" direction="right">
          <button 
            slot="trigger" 
            class="px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600"
          >
            Open Side Drawer
          </button>
          
          <div class="p-4 w-[300px]">
            <h3 class="text-xl font-bold mb-4">Navigation</h3>
            <nav class="space-y-2">
              {menuCategories.map((category) => (
                <a 
                  href={`#${category.id}`} 
                  class="block py-2 px-4 hover:bg-gray-200 rounded"
                  onclick={`sideDrawerDrawer.close(); document.getElementById('${category.id}').scrollIntoView({behavior: 'smooth'})`}
                >
                  {category.title}
                </a>
              ))}
            </nav>
            <div class="mt-6">
              <button 
                onclick="sideDrawerDrawer.close()" 
                class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300"
              >
                Close
              </button>
            </div>
          </div>
        </Drawer>
      </div>
      
      <div class="bg-gray-100 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Handle-Only Drawer</h2>
        <Drawer id="handle-drawer" handleOnly={true}>
          <button 
            slot="trigger" 
            class="px-4 py-2 bg-amber-500 text-white rounded hover:bg-amber-600"
          >
            Open Handle-Only Drawer
          </button>
          
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">Handle-Only Drawer</h3>
            <p class="mb-4">This drawer can only be dragged by the handle at the top.</p>
            <p class="mb-4">Try dragging from the content area - it won't work!</p>
            <button 
              onclick="handleDrawerDrawer.close()" 
              class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300"
            >
              Close
            </button>
          </div>
        </Drawer>
      </div>
    </div>
    
    <div class="mt-8 p-6 bg-blue-50 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Implementation Notes</h2>
      <ul class="list-disc pl-5 space-y-2">
        <li>Drawers support opening from any direction: <code>bottom</code>, <code>top</code>, <code>left</code>, or <code>right</code></li>
        <li>You can specify <code>snapPoints</code> as percentages of the screen height</li>
        <li>The <code>handleOnly</code> prop restricts dragging to only the handle</li>
        <li>Each drawer has a unique ID that provides global methods:
          <ul class="list-disc pl-5 mt-1">
            <li><code>yourIdDrawer.open()</code></li>
            <li><code>yourIdDrawer.close()</code></li>
            <li><code>yourIdDrawer.toggle()</code></li>
          </ul>
        </li>
      </ul>
    </div>
  </main>
</MainLayout> 